                "https://github.com/jtroo/kanata/raw/refs/heads/main/assets/Interception.zip"
            ],
            "hash": [
                "7c8fad2264d39245441a7e232d2dc6eb09004f475fb926576ab5cea880f9dcc7",
                "ad038963d6413055765128b0b931f6e765147c9916dba79e65d872b261f9af10"
            ]
        }
    },
    "bin": "kanata_windows_gui_wintercept_x64.exe",
    "shortcuts": [
        [
            "kanata_windows_gui_wintercept_x64.exe",
            "Kanata Wintercept"
        ]
    ],
    "persist": [
        "kanata.kbd"
    ],
    "post_install": [
        "# Copy interception.dll from auto-extracted Interception folder",
        "Copy-Item \"$dir\\Interception\\library\\x64\\interception.dll\" \"$dir\\interception.dll\" -Force -ErrorAction SilentlyContinue",
        "",
        "# Remove unnecessary files",
        "Remove-Item \"$dir\\*.exe\" -Exclude 'kanata_windows_gui_wintercept_x64.exe' -Force",
        "Remove-Item \"$dir\\*.dll\" -Exclude 'interception.dll' -Force",
        "Remove-Item \"$dir\\Interception\" -Recurse -Force -ErrorAction SilentlyContinue",
        "",
        "Write-Host 'Kanata wintercept GUI installation completed!' -ForegroundColor Green",
        "Write-Host 'Executable: kanata_windows_gui_wintercept_x64.exe' -ForegroundColor Green",
        "Write-Host '' ",
        "Write-Host 'Configuration file location:' -ForegroundColor Cyan",
        "Write-Host \"  $persist_dir\\kanata.kbd\" -ForegroundColor Cyan",
        "Write-Host 'The config file is in the same directory as the executable.' -ForegroundColor Yellow"
    ],
    "checkver": {
        "github": "https://github.com/jtroo/kanata"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/jtroo/kanata/releases/download/v$version/kanata-windows-binaries-x64-v$version.zip"
            }
        }
    }
