{
    "version": "2.6.2",
    "description": "Taskwarrior - Command line Task Management",
    "homepage": "https://taskwarrior.org/",
    "license": "MIT",
    "notes": [
        "This is the MSYS2 build of Taskwarrior.",
        "For the latest version (3.4.2), please use WSL: wsl sudo apt install taskwarrior"
    ],
    "url": "https://mirror.msys2.org/msys/x86_64/task-2.6.2-2-x86_64.pkg.tar.zst",
    "hash": "feb00eb0bd603d903fa59487d2d0a51bb0b0b2f0a91158ee98b88d91faf4d98c",
    "installer": {
        "script": [
            "# Extract nested tar from zst",
            "Expand-7zipArchive \"$dir\\task-2.6.2-2-x86_64.pkg.tar.zst\" \"$dir\" -Removal",
            "Expand-7zipArchive \"$dir\\task-2.6.2-2-x86_64.pkg.tar\" \"$dir\" -Removal",
            "# Move files from usr/bin to root",
            "Move-Item \"$dir\\usr\\bin\\*\" \"$dir\" -Force",
            "# Clean up",
            "Remove-Item \"$dir\\usr\" -Recurse -Force -ErrorAction SilentlyContinue"
        ]
    },
    "bin": "task.exe",
    "checkver": {
        "url": "https://packages.msys2.org/package/task",
        "regex": "Version:[\\s]*([\\d.]+)-"
    },
    "autoupdate": {
        "url": "https://mirror.msys2.org/msys/x86_64/task-$version-$preReleaseVersion-x86_64.pkg.tar.zst"
    }
}
